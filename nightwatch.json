{
  "src_folders": [
    "Regression/tests"
  ],
  "output_folder": "reports",
  "custom_commands_path": "",
  "custom_assertions_path": "",
  "page_objects_path": "",
  "globals_path": "",
  "selenium": {
    "start_process": true,
    "server_path": "./lib/drivers/selenium-server-standalone-3.141.59.jar",
    "log_path": "./log",
    "host": "127.0.0.1",
    "port": 4444,
    "cli_args": {
      "webdriver.chrome.driver": "./node_modules/chromedriver/lib/chromedriver/chromedriver.exe",
      "webdriver.gecko.driver": "",
      "webdriver.edge.driver": ""
    }
  },
  "test_settings": {
    "default": {
      "launch_url": "http://localhost",
      "selenium_port": 4444,
      "selenium_host": "localhost",
      "silent": true,
      "screenshots": {
        "enabled": true,
        "path": "./screenShots",
        "on_failure": true,
        "on_error": true
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "chromeOptions": {
          "w3c": false
        }
      }
    },
    "firefox": {
      "desiredCapabilities": {
        "browserName": "firefox",
        "marionette": true,
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    },
    "edge": {
      "desiredCapabilities": {
        "browserName": "MicrosoftEdge"
      }
    }
  },
  "test_runner": {
    "type": "mocha",
  
    "options": {
      "reporter": "mochawesome-screenshots",
      "reporterOptions": {
        "overwrite": false,
        "reportDir": "customReportDir",
        "reportName": "customReportName",
        "reportTitle": "customReportTitle",
        "reportPageTitle": "customReportPageTitle",
        "takePassedScreenshot": false,
        "clearOldScreenshots": true,
        "shortScrFileNames": false,
        "jsonReport": false,
        "multiReport": false,
        "enableCode": false
      },
      "timeout": 600000
    }
  }
}